<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="459dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_lb_sell_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/titr"
                    android:text="فاکتور فروش"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_lb_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/yekan"
                    android:text="نام مشتری:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_lb_sell_invoice" />

                <TextView
                    android:id="@+id/txt_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/yekan"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_lb_customer_name"
                    app:layout_constraintEnd_toStartOf="@id/txt_lb_customer_name"
                    app:layout_constraintTop_toTopOf="@id/txt_lb_customer_name" />

                <TextView
                    android:id="@+id/txt_lb_invoice_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/yekan"
                    android:text="شماره:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_lb_customer_name" />

                <TextView
                    android:id="@+id/txt_invoice_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/yekan"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_lb_invoice_ID"
                    app:layout_constraintEnd_toStartOf="@id/txt_lb_invoice_ID"
                    app:layout_constraintTop_toTopOf="@id/txt_lb_invoice_ID" />

                <TextView
                    android:id="@+id/txt_lb_invoice_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/yekan"
                    android:text="تاریخ:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/txt_invoice_ID"
                    app:layout_constraintTop_toTopOf="@id/txt_invoice_ID" />

                <TextView
                    android:id="@+id/txt_invoice_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/yekan"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@id/txt_lb_invoice_date"
                    app:layout_constraintTop_toTopOf="@id/txt_lb_invoice_date" />

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/regular"
                    android:text="احتراما بدینوسیله شرح خدمات و کالاهای ارائه شده بحضور شما ارائه می شود"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_invoice_date" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_invoice_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/txt_description" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="88dp"
            android:backgroundTint="@color/orange"
            android:text="چاپ فاکتور" />

    </LinearLayout>

</layout>